

<div class="JuiceFrame">
    <div class="JuiceHeader">
    	<div class="JuiceGlyph">200 ml</div>
    	<div class="JuiceTitle"><%= t 'juices.juice10.title' %></div>
    </div>

    <div class="JuiceContent">
    	<%= image_tag "10-hazelnutmylk.png", class: "JuiceBottle" %>
		<div class="JuiceIngredients">
			<div class="Ingredient">
				<div class="IngredientIconFrame"><%= image_tag "hazelnut.png", class: "IngredientIcon" %></div>
				<div class="IngredientLabel"><%= t 'ingredients.hazelnut' %></div>
			</div>
			<div class="Ingredient">
				<div class="IngredientIconFrame"><%= image_tag "water.png", class: "IngredientIcon" %></div>
				<div class="IngredientLabel"><%= t 'ingredients.water' %></div>
			</div>
			<div class="Ingredient">
				<div class="IngredientIconFrame"><%= image_tag "date.png", class: "IngredientIcon" %></div>
				<div class="IngredientLabel"><%= t 'ingredients.dates' %></div>
			</div>
			<div class="Ingredient">
				<div class="IngredientIconFrame"><%= image_tag "vanillabean.png", class: "IngredientIcon" %></div>
				<div class="IngredientLabel"><%= t 'ingredients.vanillabean' %></div>
			</div>
			<div class="Ingredient">
				<div class="IngredientIconFrame"><%= image_tag "cinnamon.png", class: "IngredientIcon" %></div>
				<div class="IngredientLabel"><%= t 'ingredients.cinnamon' %></div>
			</div>
		</div> 
		<div class="JuiceDescription">
			<%= t 'juices.juice10.description' %>
		</div>
    </div>
</div>
