<% if params[:locale] == "tr" %>
	<div id="carousel_outer_frame" class="owl-carousel owl-theme">
		
		<div class="carousel_frame" id="carousel_frame1"></div>
		
		<%= link_to juices_path do %>
			<div class="carousel_frame" id="carousel_frame2"></div>
		<% end %>
		<%= link_to home_path(:anchor => 'section4') do %>
			<div class="carousel_frame" id="carousel_frame3"></div>
		<% end %>

		<%= link_to cleanses_path do %>
			<div class="carousel_frame" id="carousel_frame4"></div>
		<% end %>	
	</div>
<% elsif params[:locale] == "en" %>
	<div id="carousel_outer_frame" class="owl-carousel owl-theme">
		
		<div class="carousel_frame" id="carousel_frame1en"></div>
		
		<%= link_to juices_path do %>
			<div class="carousel_frame" id="carousel_frame2en"></div>
		<% end %>
		<%= link_to home_path(:anchor => 'section4') do %>
			<div class="carousel_frame" id="carousel_frame3en"></div>
		<% end %>

		<%= link_to cleanses_path do %>
			<div class="carousel_frame" id="carousel_frame4en"></div>
		<% end %>	
	</div>
<% end %>

<script>
	$(document).ready(function() {
  		 $("#carousel_outer_frame").owlCarousel({
	 
	      slideSpeed : 5000,
	      paginationSpeed : 700,
	      singleItem:true,
	 	  autoPlay : true,
	 	  pagination: true,
	 	  mouseDrag: false,
	 	  touchDrag: false
	      // "singleItem:true" is a shortcut for:
	      // items : 1, 
	      // itemsDesktop : false,
	      // itemsDesktopSmall : false,
	      // itemsTablet: false,
	      // itemsMobile : false
	 
	  	});
	});


</script>
